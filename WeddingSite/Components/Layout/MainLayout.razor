@inherits LayoutComponentBase

<div class="page">
    
    <main>
        <NavMenu />

        <article class="content px-4">
            @Body
        </article>

        <footer class="bg-light mt-5 py-4">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <p>&copy; @DateTime.Now.Year - My Application. All rights reserved.</p>
                    </div>
                </div>
            </div>
        </footer>
    </main>

    
</div>

